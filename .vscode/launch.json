{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Debug",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "args": [
                "--dart-define=FLUTTER_WEB_USE_SKIA=true"
            ]
        },
        {
            "name": "Flutter Release",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "release",
            "console": "debugConsole"
        },
        {
            "name": "Flutter Profile",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "profile",
            "console": "debugConsole"
        },
        {
            "name": "Flutter Debug (Android)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "deviceId": "android",
            "args": [
                "--dart-define=FLUTTER_WEB_USE_SKIA=true"
            ]
        },
        {
            "name": "Flutter Debug (iOS)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "deviceId": "ios",
            "args": [
                "--dart-define=FLUTTER_WEB_USE_SKIA=true"
            ]
        },
        {
            "name": "Flutter Debug (macOS)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "deviceId": "macos",
            "args": [
                "--dart-define=FLUTTER_WEB_USE_SKIA=true"
            ]
        },
        {
            "name": "Flutter Debug (Web)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "deviceId": "web-server",
            "args": [
                "--web-renderer=html",
                "--web-port=3000",
                "--dart-define=FLUTTER_WEB_USE_SKIA=true"
            ]
        },
        {
            "name": "Flutter Test",
            "type": "dart",
            "request": "launch",
            "program": "test/widget_test.dart",
            "console": "debugConsole",
            "args": [
                "--coverage"
            ]
        },
        {
            "name": "Flutter Integration Test",
            "type": "dart",
            "request": "launch",
            "program": "integration_test/",
            "console": "debugConsole"
        },
        {
            "name": "Dart Test (Single File)",
            "type": "dart",
            "request": "launch",
            "program": "${file}",
            "console": "debugConsole"
        },
        {
            "name": "Flutter: Hot Reload Mode",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "console": "debugConsole",
            "args": [
                "--dart-define=FLUTTER_WEB_USE_SKIA=true"
            ]
        }
    ]
}
